@model SocialNetwork.WebUI.Models.ChangePasswordViewModel;

@{
    ViewBag.Title = "Change Password";
}

<div class="middle-sidebar-bottom">
    <div class="middle-sidebar-left">
        <div class="middle-wrap">
            <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
                <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
                    <a class="d-inline-block mt-2" asp-controller="Home" asp-action="Settings">
                        <i class="ti-arrow-left font-sm text-white"></i>
                    </a>
                    <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">Change Password</h4>
                </div>
                @if (!string.IsNullOrEmpty((string?) TempData["passErr"]))
                {
                    <div class="alert alert-danger animate__animated animate__backInLeft" role="alert">
                        <label>@TempData["passErr"]</label>
                        <br/>
                        <label>&nbsp;1) At least one capital letter.</label>
                        <br/>
                        <label>&nbsp;2) At least one small letter.</label>
                        <br/>
                        <label>&nbsp;3) At least one digit.</label>
                        <br/>
                        <label>&nbsp;4) At least one specific sign.</label>
                    </div>
                }
                else if(TempData["resErrMsg"]!=null){
                    <div class="alert alert-danger animate__animated animate__backInLeft" role="alert" >@TempData["resErrMsg"]</div>
                }
                <div class="card-body p-lg-5 p-4 w-100 border-0">
                    <form asp-controller="Home" asp-action="ResetPassword" method="post" role="form">
                        <input asp-for="Usrname" class="d-none"/>
                        <div class="row">
                            <div class="col-lg-12 mb-3">
                                <div class="form-gorup">
                                    <label asp-for="CurrentPassowrd" class="mont-font fw-600 font-xssss text-dark">Current Password</label>
                                    <input asp-for="CurrentPassowrd" class="form-control">
                                    <span asp-validation-for="CurrentPassowrd" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-12 mb-3">
                                <div class="form-gorup">
                                    <label asp-for="ChangePassword" class="mont-font fw-600 font-xssss text-dark">Change Password</label>
                                    <input asp-for="ChangePassword" class="form-control">
                                    <span asp-validation-for="ChangePassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 mb-3">
                                <div class="form-gorup">
                                    <label asp-for="ConfirmChangePassword" class="mont-font fw-600 font-xssss text-dark">Confirm Change Password</label>
                                    <input asp-for="ConfirmChangePassword" class="form-control">
                                    <span asp-validation-for="ConfirmChangePassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 mb-0">
                                <input class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block" type="submit" value="Save"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>