@model SocialNetwork.WebUI.Models.PostViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SocialNetwork.WebUI.Controllers


<form class="card w-100 shadow-xss rounded-xxl border-0 ps-4 pt-4 pe-4 pb-3 mb-3" enctype="multipart/form-data" asp-controller="Database" asp-action="NewPost" method="post" role="form">
    <input class="d-none" type="number" @*asp-for="SharedUserId"*@ value="@HomeController.User.Id"/>
    <input type="file" @*asp-for="Files"*@ id="imgupload" multiple accept="image/*, video/*" style="display: none"/>

    <div class="card-body p-0">
        <label for="message" class="pointer font-xssss fw-600 text-grey-500 card-body p-0 d-flex align-items-center text-decoration-none">
            @{
                string imgPath = HomeController.User.ImageUrl;
                if (string.IsNullOrEmpty(HomeController.User.ImageUrl)) imgPath = "/images/defaultImage.png";
            }
            <img src="@imgPath" alt="@HomeController.User.Username" class="shadow-sm rounded-circle w30 me-2 font-xs"/>Create Post
        </label>
    </div>
    <div class="card-body p-0 mt-3">
        <textarea @*asp-for="PostMessage"*@ class="h100 bor-0 w-100 rounded-xxl p-2 ps-3 pe-3 font-xssss text-grey-500 fw-500 border-light-md theme-dark-bg" cols="30" rows="10" placeholder="What's on your mind?"></textarea>
    </div>
    <div class="card-body d-flex p-0 mt-0">
        <a class="d-flex align-items-center font-xssss fw-600 ls-1 text-grey-700 text-dark pe-4 text-decoration-none">
            <i class="font-md text-danger feather-video me-2"></i>
            <span class="d-none-xs">Live Video</span>
            <!--Create live video with javascript-->
        </a>
        <a class="d-flex align-items-center font-xssss fw-600 ls-1 text-grey-700 text-dark pe-4 text-decoration-none" style="cursor: pointer;" onclick="document.getElementById('imgupload').click();">
            <i class="font-md text-success feather-image me-2"></i>
            <span class="d-none-xs">Photo/Video</span>
        </a>
        <a class="d-flex align-items-center font-xssss fw-600 ls-1 text-grey-700 text-dark pe-4 text-decoration-none">
            <i class="font-md text-warning feather-camera me-2"></i>
            <span class="d-none-xs">Feeling/Activity</span>
